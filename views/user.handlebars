    <h1>Add a New User</h1>
    <form id="add_user" action="/user" method="post">
        <fieldset>
            <label>First name: <input type="text" name="fname" required></label><br>
            <label>Last name: <input type="text" name="lname" required></label><br>
            <input type="submit" value="Submit">
        </fieldset>
    </form>
    <br>
    <br>
    <h2>User List</h2>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each user}}
            <tr>
                <td>{{fname}}</td>
                <td>{{lname}}</td>
                <td><button onclick="deleteUser({{id}})">Delete</button></td>
                <!-- <td><button onclick="update_User({{id}})">Update</button></td> -->
            </tr>
            {{/each}}
        </tbody>
    </table>
